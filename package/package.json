{
  "name": "sscroll",
  "version": "1.0.1",
  "description": "Isomorphic smooth scroll utility.",
  "main": "dist/index.js",
  "license": "MIT",
  "repository": "https://github.com/estrattonbailey/sscroll",
  "author": "estrattonbailey",
  "scripts": {
    "umd": "browserify index.js --standalone updwn -d -p [minifyify --no-map] > dist/index.umd.js",
    "lint": "standard 'index.js'",
    "prebuild": "npm run lint",
    "build": "NODE_ENV=production babel index.js -d dist/",
    "watch": "NODE_ENV=development babel -w --no-comments index.js -d dist/",
    "prepublish": "npm run build"
  },
  "browserify": {
    "debug": true,
    "cache": {},
    "packageCache": {},
    "extension": [
      "js"
    ],
    "transform": [
      "babelify"
    ]
  },
  "keywords": [
    "smooth scroll",
    "isomorphic"
  ],
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.21.0",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-babili": "0.0.10",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.23.0",
    "babelify": "^7.3.0",
    "browserify": "^14.3.0",
    "minifyify": "^7.3.5",
    "standard": "^9.0.2"
  },
  "dependencies": {
    "tweezer.js": "^1.4.0"
  }
}
